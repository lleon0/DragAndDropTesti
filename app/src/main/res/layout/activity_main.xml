<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#DD000000">

    <GridLayout
        android:id="@+id/topleft"
        android:layout_width="0dp"
        android:layout_weight=".1"
        android:layout_height="match_parent"
        android:background="@drawable/shape"
        android:columnCount="2"
        android:columnWidth="320dp"
        android:rowCount="3"
        android:stretchMode="columnWidth" >

        <include android:id="@+id/myimage1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            layout="@layout/swimmer_databox_layout"/>

        <include android:id="@+id/myimage2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            layout="@layout/swimmer_databox_layout"/>

        <include android:id="@+id/myimage3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            layout="@layout/swimmer_databox_layout"/>

        <include android:id="@+id/myimage4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            layout="@layout/swimmer_databox_layout"/>

        <include android:id="@+id/myimage5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            layout="@layout/swimmer_databox_layout"/>

    </GridLayout>

    <GridLayout
        android:id="@+id/topright"
        android:layout_width="0dp"
        android:layout_weight=".1"
        android:layout_height="match_parent"
        android:background="@drawable/shape"
        android:columnCount="2"
        android:columnWidth="320dp"
        android:rowCount="3"
        android:stretchMode="columnWidth"
        android:visibility="gone">

    </GridLayout>

    <GridLayout
        android:id="@+id/bottomleft"
        android:layout_width="0dp"
        android:layout_weight=".1"
        android:layout_height="match_parent"
        android:background="@drawable/shape"
        android:columnCount="2"
        android:columnWidth="320dp"
        android:rowCount="3"
        android:stretchMode="columnWidth"
        android:visibility="gone">

    </GridLayout>

    <Button
        android:id="@+id/hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="NewDatabox"
        android:text="New"/>



</LinearLayout>